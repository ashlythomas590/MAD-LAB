<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CASIO"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="viewEnd"/>
    <EditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="0"
        android:textSize="28dp"
        android:gravity="end"
        android:inputType="none"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="28dp"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:layout_toRightOf="@id/btn1"
        android:layout_alignTop="@id/btn1"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:layout_toRightOf="@id/btn2"
        android:layout_alignTop="@id/btn1"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btnadd"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="+"
        android:layout_toRightOf="@+id/btn3"
        android:layout_alignTop="@id/btn1"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@id/btn1"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_toRightOf="@+id/btn4"
        android:layout_alignTop="@id/btn4"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:layout_toRightOf="@+id/btn5"
        android:layout_alignTop="@id/btn5"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btnsub"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="-"
        android:layout_toRightOf="@+id/btn6"
        android:layout_alignTop="@id/btn4"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:layout_below="@+id/btn4"
        android:layout_alignLeft="@id/btn1"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_alignTop="@id/btn7"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:layout_toRightOf="@+id/btn8"
        android:layout_alignTop="@id/btn7"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btndiv"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="/"
        android:layout_toRightOf="@+id/btn9"
        android:layout_alignTop="@id/btn7"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btndot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@id/btn1"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:layout_toRightOf="@+id/btndot"
        android:layout_alignTop="@id/btndot"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btnc"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="c"
        android:layout_toRightOf="@+id/btn0"
        android:layout_alignTop="@id/btndot"
        android:layout_marginLeft="8dp"/>
    <Button
        android:id="@+id/btnmul"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="*"
        android:layout_toRightOf="@+id/btnc"
        android:layout_alignTop="@id/btndot"
        android:layout_marginLeft="8dp"/>
    <Button
            android:id="@+id/btnequal"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="="
            android:layout_below="@+id/btnc"
            android:layout_marginTop="12dp" />
</RelativeLayout>
